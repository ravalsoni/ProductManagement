﻿@using ProductManagement.Web.Models.Categories
@model IndexViewModel

@section scripts
    {
       <environment names="Development">
        <script src="~/view-resources/views/tasks/create.js"></script>
    </environment>
   
}

<h2>
    @L("NewTask")
</h2>

<form id="TaskCreationForm">

    <div class="form-group">
        <label for="Title">@L("Title")</label>
        <input type="text" name="Title" class="form-control" placeholder="@L("Title")" >
    </div>

    <div class="form-group">
        <label for="Description">@L("Description")</label>
        <input type="text" name="Description" class="form-control" placeholder="@L("Description")">
    </div>

   
    <button type="submit" class="btn btn-default">@L("Save")</button>

</form>