@using Abp.Authorization.Users
@using ProductManagement.Web.Models.Common.Modals
@using ProductManagement.Web.Models.Categories
@model IndexViewModel
@{
    Layout = null;
}
<div class="modal fade" id="CategoryCreateModal" tabindex="-1" role="dialog" aria-labelledby="CategoryCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewCategory")))
            <form name="CategoryCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" role="tab" href="#create-catgory-details">@L("Category Details")</a>
                        </li>
                    </ul>
                    <div class="tab-content mt-4">
                        <div role="tabpanel" class="tab-pane container active" id="create-catgory-details">
                            <div class="form-group row required">
                                <label class="col-md-3 col-form-label">@L("Category Name")</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="CategoryName" >
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
